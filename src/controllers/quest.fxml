<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="views.controllers.QuestController">
   <children>
      <VBox fx:id="contentBox" alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="10.0">
         <children>
            <Label fx:id="title" alignment="CENTER" prefHeight="38.0" prefWidth="279.0" text="Choose your quest">
               <font>
                  <Font size="25.0" />
               </font>
            </Label>
            <VBox fx:id="questBox" alignment="CENTER" prefHeight="265.0" prefWidth="600.0" spacing="10.0" />
            <HBox fx:id="saveLoadBox" alignment="CENTER">
               <children>
                  <Button fx:id="saveButton" mnemonicParsing="false" onAction="#saveButtonClicked" text="Save" />
                  <Button fx:id="loadButton" mnemonicParsing="false" onAction="#loadButtonClicked" text="Load" />
                  <Button fx:id="quitButton" mnemonicParsing="false" onAction="#quitButtonAction" text="Quit" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</StackPane>
